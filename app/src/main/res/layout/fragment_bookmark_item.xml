<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="8dp"
    android:paddingRight="5dp"
    android:paddingBottom="8dp"
    android:descendantFocusability="blocksDescendants"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_f_bi_ll"
        android:layout_alignParentTop="true">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_f_bi_cb_check"
            android:layout_alignParentLeft="false"
            android:button="@android:drawable/checkbox_off_background"
            android:textSize="10dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bookmark"
            android:id="@+id/my_f_bi_tv_bookmark"
            android:layout_alignParentTop="false"
            android:textColor="@color/my_text_word"
            android:textSize="15dp"
            android:textStyle="normal|bold"
            android:layout_toRightOf="@+id/my_f_bi_cb_check"
            android:layout_toLeftOf="@+id/my_f_bi_tv_date"
            android:layout_alignParentLeft="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/my_f_bi_tv_date"
            android:textSize="11dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#FF9E9C9C"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

</RelativeLayout>