<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="8dp"
    android:paddingRight="5dp"
    android:paddingBottom="8dp"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout7"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Word"
                    android:id="@+id/my_c_svi_word"
                    android:textSize="15dp"
                    android:textColor="#e65a5a"
                    android:textStyle="bold|normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spelling"
                    android:id="@+id/my_c_svi_spelling"
                    android:textSize="13dp"
                    android:textStyle="bold|normal"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FF9E9C9C" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mean"
                android:id="@+id/my_c_svi_mean"
                android:textColor="#4f8ead"
                android:textSize="13dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_c_svi_ib_myvoc"
            android:layout_alignParentLeft="false"
            android:foregroundGravity="center_vertical"
            android:src="@android:drawable/star_off"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent" />

    </RelativeLayout>

</RelativeLayout>