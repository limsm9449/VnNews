<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_study2"
    tools:context=".Study2Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/adView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <RadioGroup
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:checkedButton="@+id/my_a_study2_rb_all"
                android:id="@+id/my_a_study2_rg"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@drawable/my_toggle_outline"
                android:layout_alignParentRight="false"
                android:layout_alignParentLeft="true">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="All"
                    android:id="@+id/my_a_study2_rb_all"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/my_toggle_bg"
                    android:layout_weight="1"
                    android:layout_marginLeft="1dp"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/my_white"
                    android:checked="true"
                    android:layout_marginRight="1dp" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="암기"
                    android:id="@+id/my_a_study2_rb_m"
                    android:background="@drawable/my_toggle_bg"
                    android:layout_weight="1.5"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/my_white" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="미암기"
                    android:id="@+id/my_a_study2_rb_m_not"
                    android:background="@drawable/my_toggle_bg"
                    android:layout_weight="2"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/my_white" />
            </RadioGroup>

            <RadioGroup
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:checkedButton="@+id/my_a_study2_rb_word"
                android:id="@+id/my_a_study2_rg2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                android:background="@drawable/my_toggle_outline"
                android:layout_toRightOf="@+id/my_a_study2_rg" >

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="단어"
                    android:id="@+id/my_a_study2_rb_word"
                    android:background="@drawable/my_toggle_bg"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/my_white"
                    android:layout_marginLeft="1dp" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="뜻"
                    android:id="@+id/my_a_study2_rb_mean"
                    android:background="@drawable/my_toggle_bg"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/my_white" />
            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Random"
                android:id="@+id/my_a_study2_b_random"
                android:layout_alignParentTop="false"
                android:background="@drawable/my_button"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_divider"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/my_a_cat_lv_category"
            android:layout_marginTop="5dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/my_a_study2_lv"
            android:layout_gravity="center_horizontal"
            android:divider="@color/my_divider"
            android:dividerHeight="0.5dp"
            android:layout_alignParentBottom="true" />

    </LinearLayout>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
