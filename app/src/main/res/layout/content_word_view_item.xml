<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Kind"
            android:id="@+id/my_c_wvi_tv_kind"
            android:textAlignment="gravity"
            android:textColor="@color/FlatDarkBlue"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="7dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Mean"
            android:id="@+id/my_c_wvi_tv_mean"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Foriegn"
            android:id="@+id/my_c_wvi_tv_foriegn"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textColor="#e65a5a"
            android:textSize="15dp"
            android:textAlignment="gravity"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Han"
            android:id="@+id/my_c_wvi_tv_han"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:textColor="#4f8ead"
            android:textSize="13dp"
            android:layout_alignParentLeft="false"
            android:layout_below="@+id/my_f_dk_tv_viet"
            android:textAlignment="gravity"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

</RelativeLayout>